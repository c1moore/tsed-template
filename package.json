{
  "name": "tsed-template",
  "version": "1.0.0",
  "description": "Template for creating a Ts.ED project.",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rm -rf ./dist",
    "build": "npm run clean && ./node_modules/.bin/tsc",
    "start": "ts-node src/index.ts",
    "start:watch": "nodemon --watch src --ext ts --delay 3 --exec npm start",
    "test": "NODE_ENV=test nyc mocha",
    "test:watch": "nodemon -e js,ts --watch src --watch test --exec \"NODE_ENV=test mocha\"",
    "lint": "npx eslint src/**/*.ts src/*.ts",
    "lint:fix": "npm run lint -- --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/c1moore/tsed-template.git"
  },
  "keywords": [
    "typescript",
    "ts",
    "template",
    "ts.ed",
    "tsed",
    "express",
    "node",
    "nodejs"
  ],
  "author": "Calvin Moore <c1moore>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/c1moore/tsed-template/issues"
  },
  "homepage": "https://github.com/c1moore/tsed-template#readme",
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@tsed/testing": "^5.65.9",
    "@types/chai": "^4.2.18",
    "@types/chai-as-promised": "^7.1.4",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.12",
    "@types/mocha": "^8.2.2",
    "@types/node": "^15.12.2",
    "@types/qs": "^6.9.6",
    "@types/sinon": "^10.0.2",
    "@types/supertest": "^2.0.11",
    "@types/swagger-schema-official": "^2.0.21",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "eslint": "^7.28.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.23.4",
    "mocha": "^9.0.0",
    "nodemon": "^2.0.7",
    "nyc": "^15.1.0",
    "sinon": "^11.1.1",
    "source-map-support": "^0.5.19",
    "supertest": "^6.1.3",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.2"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "all": true,
    "reporter": [
      "lcov",
      "json",
      "text"
    ],
    "exclude": [
      "**/*.spec.ts",
      "**/*.spec.js",
      "**/dist/**",
      "**/node_modules/**",
      "**/coverage/**",
      "**/test/**"
    ],
    "excludeAfterRemap": false
  },
  "dependencies": {
    "@tsed/common": "^6.56.0",
    "@tsed/core": "^6.56.0",
    "@tsed/di": "^6.56.0",
    "@tsed/exceptions": "^6.56.0",
    "@tsed/schema": "^6.56.0",
    "@tsed/swagger": "^6.56.0",
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "method-override": "^3.0.0",
    "qs": "^6.10.1"
  },
  "mocha": {
    "require": [
      "ts-node/register",
      "source-map-support/register"
    ],
    "extension": "ts",
    "file": "./test/mocha.init",
    "recursive": true,
    "colors": true,
    "exit": true
  }
}
